<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/single_player"
        android:id="@+id/btn_single_player"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/multi_player"
        android:id="@+id/btn_multi_player"
        android:layout_marginTop="65dp"
        android:layout_alignTop="@+id/btn_single_player"
        android:layout_alignLeft="@+id/btn_single_player"
        android:layout_alignStart="@+id/btn_single_player"
        android:layout_alignRight="@+id/btn_single_player"
        android:layout_alignEnd="@+id/btn_single_player" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/img"
        android:scaleType="centerInside"
        android:src="@drawable/guess_the_song"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
